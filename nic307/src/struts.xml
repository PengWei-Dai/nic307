<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="user" namespace="/user" extends="struts-default">

		<action name="UserRegist" class="net.nic307.user.action.UserAction"
			method="register">
	<result name="success">/jsp/regist_success.jsp</result></action>		
		<action name="UserLogin" class="net.nic307.user.action.UserAction"
			method="login">
			<result name="success">/jsp/user_regist.jsp</result></action>
	</package>
</struts>    
